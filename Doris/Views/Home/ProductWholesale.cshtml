@model Doris.ViewModel.ProductWholesaleViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = "Giá sỉ tốt nhất";
    ViewBag.Canonical = Request.Url?.GetLeftPart(UriPartial.Authority) + Url.Action("ProductWholesale");
    ViewBag.Robots = "noindex";

}

<section class="bg-pink page-pb">
    <div class="container">
        <div class="title-page title-border">
            <button onclick="history.back()"><i class="fa-regular fa-arrow-left"></i></button>
            <div class="title">Giá sỉ tốt nhất</div>
        </div>
        @if (Model.Products.Any())
        {
            <div class="row">
                @foreach (var item in Model.Products)
                {
                    <div class="col-6 mb-2">
                        @Html.Partial("_ProductItemMobile", item)
                    </div>
                }
                @if (Model.Products.PageCount > 1)
                {
                    <div class="col-12 d-flex justify-content-center">
                        @Html.PagedListPager(Model.Products, page => Url.Action("ProductWholesale", new { page }))
                    </div>
                }
            </div>
        }
        else
        {
            <p class="alert alert-success small">Nội dung hiện chưa được cập nhật. Vui lòng quay lại sau !!!!</p>
        }
    </div>
</section>